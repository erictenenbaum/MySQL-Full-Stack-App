<div class="burger-area">
{{#each burgers}}

{{#if devoured}}
<div class="devoured">
	{{this.id}}. {{this.burger_name}}	<button class="delete" data-id={{this.id}}>Delete Me!</button>
</div>
{{else}}
<div class="fresh">
	{{this.id}}. {{this.burger_name}} <button class="devour" data-id={{this.id}}>Devour Me!</button>
</div>
{{/if}}
{{/each}}
</div>

